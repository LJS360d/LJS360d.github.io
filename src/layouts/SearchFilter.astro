---
import CiFilter from "~icons/meteor-icons/filter";
---

<button
  id="search-filter-btn"
  class="btn btn-accent btn-outline bg-base-100 rounded-e-none !m-0 !px-2 focus:outline-none"
>
  <CiFilter class="text-lg font-extrabold" />
</button>

<!-- OnClick -->
<script>
  const searchFilterBtn = document.getElementById(
    "search-filter-btn",
  ) as HTMLButtonElement;
  searchFilterBtn.addEventListener("click", () => {
    // show seach filter dialog
    const searchFilter = document.getElementById(
      "search-filter",
    ) as HTMLDialogElement;
    searchFilter.showModal();
  });
</script>