---
import MdMenu from "~icons/material-symbols/menu";
import SearchBar from "./SearchBar.astro";
import SearchFilter from "./SearchFilter.astro";

const { sidebarId, title } = Astro.props;
---

<header class="navbar bg-base-300 shadow-lg sticky top-0 z-50">
  <div class="navbar-start gap-2">
    <label for={sidebarId} class="btn rounded-full btn-ghost">
      <MdMenu class="text-lg" />
    </label>
    <h1 class="select-none">{title}</h1>
  </div>
  <div class="navbar-center"></div>
  <div class="navbar-end">
    <SearchFilter />
    <SearchBar />
  </div>
</header>
