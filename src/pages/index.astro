---
import Layout from "../layouts/Layout.astro";
import { RoutesIterator } from "../models/static/routes";
---

<Layout title="Acering the pocemon">
  <main class="flex flex-col items-center justify-center w-full py-6 p-4 md:p-6  mx-auto min-w-0">
    <h1 class="text-center text-4xl font-bold mb-6">La doc di CHI?</h1>
    <div class="flex flex-col pt-4 w-full gap-2 items-center">
      <div class="grid grid-flow-row md:grid-cols-2 lg:grid-cols-3 w-full gap-3 max-w-3xl">
        {
          RoutesIterator.slice(1).map((route) => (
            <a
              class="flex items-center justify-center gap-2 w-full py-3 px-4 rounded-lg border border-base-300 hover:bg-base-300/50 capitalize"
              href={route.route}
            >
              <route.icon />
              <span>{route.label || route.route}</span>
            </a>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
