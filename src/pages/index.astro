---
import Layout from "../layouts/Layout.astro";
import { RoutesIterator } from "../models/static/routes";
---

<Layout title="Acering the pocemon">
  <main class="flex flex-col items-center justify-center w-full py-6">
    <h1 class="text-center text-4xl font-bold mb-6">
      La doc di CHI?
    </h1>
    <div class="flex flex-col pt-4 px-24 w-full gap-2 items-center">
      <div class="w-max flex flex-row">
        {/* for a big button for future stuff */}
      </div>
      <div class="grid grid-flow-row md:grid-cols-5 w-full gap-4">
        {
          RoutesIterator.slice(1).map((route) => (
            <a class="w-full btn btn-accent text-neutral" href={route.route}>
              <route.icon />
              <span>{route.label || route.route}</span>
            </a>
          ))
        }
      </div>
    </div>
  </main>
</Layout>
